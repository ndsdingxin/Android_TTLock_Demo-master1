<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.localtest.RegisterSingle">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvwhitchregistersingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单个录音文件上传"
            android:textAlignment="center"
            android:textColor="#00ff00"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="20sp"
            android:id="@+id/tv_randomregistersingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="100000000000"
            android:textAlignment="center"
            android:textColor="#00ff00"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:id="@+id/tvconfirmregistersingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvtimerregistersingle"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="#0000FF" />

        <TextView
            android:id="@+id/tvtagregistersingle"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="0dp"
            android:background="#0000FF"
            android:text="点击开始录音"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>